<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="430dp"
        android:layout_height="190dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_10" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203"
        app:srcCompat="@drawable/group_116" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="299dp"
        android:layout_height="396dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Completo"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="0" />

        <EditText
            android:id="@+id/nome_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:hint="José Maria dos Santos"
            android:inputType="text"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="2" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:hint="josemaria@dominio.com"
            android:inputType="textEmailAddress"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Nascimento"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="4" />

        <EditText
            android:id="@+id/nasc_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:hint="01/01/2000"
            android:inputType="date"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Telefone"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="6" />

        <EditText
            android:id="@+id/tel_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:hint="(11) 99999-9999"
            android:inputType="phone"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="8" />

        <EditText
            android:id="@+id/cpf_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:hint="123.456.728-23"
            android:inputType="number"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="9" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar Senha"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="10" />

        <EditText
            android:id="@+id/criar_senha"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:hint="************"
            android:inputType="textPassword"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="11" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar Senha"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="12" />

        <EditText
            android:id="@+id/confirmar_senha_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:hint="************"
            android:inputType="textPassword"
            android:textSize="12sp"
            app:layout_column="0"
            app:layout_row="13" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/cadastrar_button"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4981A"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.565" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar" />

</androidx.constraintlayout.widget.ConstraintLayout>